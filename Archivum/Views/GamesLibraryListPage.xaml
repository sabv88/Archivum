<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Archivum.Views.GamesLibraryListPage"
             Title="GamesLibraryListPage">
    <VerticalStackLayout>
        <Frame>
            <VerticalStackLayout>
                <Picker SelectedItem="{Binding Filter}">
                    <Picker.Items>
                        <x:String>Все</x:String>
                        <x:String>Аниме</x:String>
                        <x:String>Фильм</x:String>
                        <x:String>Сериал</x:String>
                    </Picker.Items>
                </Picker>
                <HorizontalStackLayout Margin="5" Spacing="10" HorizontalOptions="CenterAndExpand">
                    <ImageButton Source="plus.svg" Command="{Binding AddItem}" CornerRadius="25" HorizontalOptions="StartAndExpand"></ImageButton>
                    <ImageButton Source="info.svg" Command="{Binding Statistick}"   CornerRadius="25" HorizontalOptions="EndAndExpand"></ImageButton>
                </HorizontalStackLayout>

            </VerticalStackLayout>

        </Frame>
    </VerticalStackLayout>
</ContentPage>