<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Archivum.Views.VideoLibraryListPage"
             xmlns:local="clr-namespace:Archivum"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
            
    
    <Shell.TitleView >
        <StackLayout Margin="0"  Orientation="Horizontal" >
            <SearchBar x:Name="searchBar"
                   SearchCommand="{Binding Search}"
                   SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"
                   WidthRequest="300"
                   HorizontalOptions="StartAndExpand"/>

            <ImageButton x:Name="PopupButton"  Source="coderwall1.svg" Clicked="HandleSimplePopupButtonClicked" HeightRequest="50" WidthRequest="50" HorizontalOptions="EndAndExpand"></ImageButton>
        </StackLayout>
    </Shell.TitleView>


    <StackLayout>

            <CollectionView
                    ItemsSource="{Binding Collection}"
                    SelectionMode="Single"
                    SelectedItem="{Binding SelectedVM, Mode=TwoWay}"
                    RemainingItemsThreshold ="1" RemainingItemsThresholdReachedCommand="{Binding next}"
                VerticalOptions="FillAndExpand">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>   
            <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                        <Image Source="{Binding Cover}" Aspect = "AspectFit"/>
                            <Label Text="{Binding Name}" FontSize="Large" HorizontalOptions="Center" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </StackLayout>
     
</ContentPage>