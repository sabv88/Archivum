<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Archivum.ViewModels"
             x:Class="Archivum.Views.VideoStatistick"
             Shell.TabBarIsVisible="False">
    <ContentPage.BindingContext>
        <local:VideoStatictickViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <HorizontalStackLayout Margin="20" Spacing="10">
            <Label  Text="Всего" FontSize="Large"/>
            <Label  Text="{Binding AllCount}" FontSize="Large"/>

        </HorizontalStackLayout>
            <HorizontalStackLayout Margin="20" Spacing="10">
            <Label  Text="Аниме" FontSize="Large" />
            <Label  Text="{Binding AnimeCount}" FontSize="Large" />

        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="20" Spacing="10">
            <Label  Text="Сериалов" FontSize="Large"/>
            <Label Text="{Binding SeriesCount}" FontSize="Large"/>

        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="20" Spacing="10">
            <Label  Text="Фильмов" FontSize="Large"/>
            <Label  Text="{Binding FilmsCount}" FontSize="Large"/>

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>